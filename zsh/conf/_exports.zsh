# Exports can be overwritten in your ~/.localrc 

fpath=(
  $DOTFILES/zsh/functions
  /usr/local/share/zsh/site-functions
  $fpath
)

# Add dotfiles bin to PATH
prepend_path $DOTFILES/bin

if [[ ! -x "$(command -v brew)" ]]; then
  if [[ "$(uname)" == "Linux" ]]; then
    export HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew";
    export HOMEBREW_CELLAR="$HOMEBREW_PREFIX/Cellar";
    export HOMEBREW_REPOSITORY="$HOMEBREW_PREFIX/Homebrew";
    prepend_path "$HOMEBREW_PREFIX/bin"
    prepend_path "$HOMEBREW_PREFIX/sbin"
    export MANPATH="$HOMEBREW_PREFIX/share/man${MANPATH+:$MANPATH}:";
    export INFOPATH="$HOMEBREW_PREFIX/share/info:${INFOPATH}";
  fi
  export HOMEBREW_NO_ANALYTICS=1
fi

# Set default editor to vim, can be overwritten in ~/.localrc
export EDITOR="$(which vim)"


# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
# [ -f /usr/share/doc/fzf/examples/key-bindings.zsh ] && source /usr/share/doc/fzf/examples/key-bindings.zsh
export FZF_DEFAULT_COMMAND='fd --hidden --exclude .git --type file' # use fd to respect gitignore
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Yarn
prepend_path $HOME/.yarn/bin

# Golang
export GOPATH=$HOME/go
prepend_path $HOME/go/bin
prepend_path /usr/local/go/bin

# Ruby
export GEM_HOME=$HOME/gems
prepend_path $HOME/gems/bin

# Home local bin
prepend_path $HOME/.local/bin

